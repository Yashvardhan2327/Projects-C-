#include <stdio.h>
int main() {
    printf("int = %d bytes\n", sizeof(int));
    printf("float = %d bytes\n", sizeof(float));
    printf("double = %d bytes\n", sizeof(double));
    printf("char = %d byte\n", sizeof(char));
    return 0;


int main() 
    int a, b, c, largest;
    printf("Enter three numbers: ");
    scanf("%d %d %d", &a, &b, &c);

    largest = (a > b) ? ((a > c) ? a : c) 
                      : ((b > c) ? b : c);

    printf("Largest = %d\n", largest);

    return 0;
}
